<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.DefenseActivity">

    <kr.ac.kpu.sgp02.termproject.framework.view.GameView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/layoutTowerSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="100gold"
                android:textStyle="bold"
                android:background="@mipmap/life"
                />

            <ImageButton
                android:id="@+id/btnCannonTower"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/selector_cannon"
                android:onClick="onBtnCannonTower"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnLaserTower"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/teal_700"
            android:onClick="onBtnLaserTower"
            />

        <ImageButton
            android:id="@+id/btnMissileTower"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/teal_200"
            android:onClick="onBtnMissileTower"
            />

        <ImageButton
            android:id="@+id/btnPlasmaTower"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/teal_700"
            android:onClick="onBtnPlasmaTower"
            />

    </LinearLayout>

</FrameLayout>